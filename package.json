        "test:integration": "set NODE_ENV=test && mocha --opts tests/mocha.opts \"tests/integrations/**/*.spec.ts\"",
        "test:integration:nyc": "set NODE_ENV=test && nyc mocha --opts tests/mocha.opts \"tests/integrations/**/*.spec.ts\"",
